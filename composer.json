{
    "name": "ekke/rft",
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "exclude-from-classmap": [
          "app/Database/migrations",
          "app/Database/seeds"
        ]
    },
    "authors": [
        {
            "name": "Elek László"
        }
    ],
    "require": {
        "php": "^8.1",
        "slim/slim": "^4.14",
        "slim/psr7": "^1.6",
        "slim/twig-view": "^3",
        "twig/twig": "^3",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.6",
        "robmorgan/phinx": "^0.16",
      "ext-pdo": "*"
    },
    "scripts": {
         "db:reset": [
            "@php bin/db-reset.php"
        ],
        "migrate": "vendor/bin/phinx migrate -c phinx.php",
        "rollback": "vendor/bin/phinx rollback -c phinx.php -t 0",
        "seed": "vendor/bin/phinx seed:run -c phinx.php",
        "phpcs": "@php ./vendor/bin/phpcs --standard=PSR12 app public"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/var-dumper": "^6.4"
    }
}
