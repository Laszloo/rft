{% extends "base.html.twig" %}
{% block content %}
<h1>Változó {{ hello }}</h1>
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>name</th>
                <th>author</th>
                <th>published year</th>
            </tr>
        </thead>
        <tbody>
            {% for book in books %}
                <tr>
                    <td>{{ book.id }}</td>
                    <td>{{ book.title }}</td>
                    <td>{{ book.author }}</td>
                    <td>{{ book.published_year }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
