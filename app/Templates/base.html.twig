<!doctype html>
<html lang="hu">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title|default('RFT Könyvtár') }}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">RFT Könyvtár</a>
    <div class="ms-auto d-flex gap-2">
      <a class="btn btn-sm btn-outline-light" href="/kosar">Kosár</a>
      {% if app.user is defined and app.user %}
        <a class="btn btn-sm btn-warning" href="/kijelentkezes">Kilépés</a>
        <span class="navbar-text text-white small">{{ app.user.name }}</span>
          {% if app.user.is_admin %}
              <a class="ms-5 btn btn-sm btn-primary" href="/admin">Admin felület</a>
          {% endif %}
      {% else %}
        <a class="btn btn-sm btn-outline-light" href="/bejelentkezes">Belépés</a>
      {% endif %}
    </div>
  </div>
</nav>
<main class="container my-4">
  {% block content %}{% endblock %}
</main>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script>
    toastr.options = {
        "closeButton": false,
        "debug": false,
        "newestOnTop": false,
        "progressBar": false,
        "positionClass": "toast-bottom-right",
        "preventDuplicates": false,
        "onclick": null,
        "showDuration": "300",
        "hideDuration": "1000",
        "timeOut": "5000",
        "extendedTimeOut": "1000",
        "showEasing": "swing",
        "hideEasing": "linear",
        "showMethod": "fadeIn",
        "hideMethod": "fadeOut"
    }
    {% for message in app.messages %}
    toastr.{{ message.type }}('{{ message.text }}');
    {% endfor %}
</script>
</body>
</html>
