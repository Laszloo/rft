{% extends "base.html.twig" %}
{% block content %}
<h1 class="h4 mb-3">Könyvek</h1>
<div class="row g-3">
  {% for b in books %}
    <div class="col-12 col-sm-6 col-lg-4">
      <div class="card h-100">
        {% if b.image_url %}
          <img src="{{ b.image_url }}" style="object-fit: contain; height: 200px" class="card-img-top" alt="{{ b.title }}">
        {% endif %}
        <div class="card-body d-flex flex-column">
          <h5 class="card-title mb-1">{{ b.title }}</h5>
          <p class="card-subtitle text-muted mb-2">{{ b.author }}</p>
          <div class="mt-auto d-flex justify-content-between align-items-center">
            <strong>{{ b.price|number_format(2, '.', ' ') }} Ft</strong>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <div class="col-12"><div class="alert alert-info">Nincs könyv.</div></div>
  {% endfor %}
</div>
{% endblock %}
