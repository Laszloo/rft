<!doctype html>
<html lang="hu">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title|default('RFT Könyvtár') }}</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand" href="/">RFT Könyvtár</a>
    <div class="ms-auto d-flex gap-2">
      <a class="btn btn-sm btn-outline-light" href="/kosar">Kosár</a>
      {% if app.user is defined and app.user %}
        <a class="btn btn-sm btn-warning" href="/kijelentkezes">Kilépés</a>
        <span class="navbar-text text-white small">{{ app.user.name }}</span>
      {% else %}
        <a class="btn btn-sm btn-outline-light" href="/bejelentkezes">Belépés</a>
      {% endif %}
    </div>
  </div>
</nav>
<main class="container my-4">
  {% block content %}{% endblock %}
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
