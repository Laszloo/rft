{% extends "admin/base.html.twig" %}

{% block title %}Rendelések - Admin{% endblock %}
{% set active_menu = 'dashboard' %}
{% block content_admin %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title my-2">Rendelés adatok</h5>
                </div>
                <div class="card-body">
                    <div class="my-4">
                        <form method="post" action="/admin/rendeles/{{ order.order_id }}" class="d-inline">
                            <div class="input-group" style="max-width: 320px;">
                                <select name="status" class="form-select form-select-sm">
                                    {% for value, meta in status %}
                                        <option value="{{ value }}"
                                                {% if order.status == value %}selected{% endif %}>
                                            {{ meta.label }}
                                        </option>
                                    {% endfor %}
                                </select>

                                <button type="submit" class="btn btn-sm btn-outline-primary">
                                    Mentés
                                </button>
                            </div>
                        </form>
                    </div>
                    {% if order is empty %}
                        <div class="alert alert-info">
                            Ilyen rendelés nincs a rendszerben.
                        </div>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <tbody>
                                    <tr>
                                        <td>#</td>
                                        <td>{{ order.order_id }}</td>
                                    </tr>
                                    <tr>
                                        <td>Rendelés azonosító</td>
                                        <td><strong>{{ order.order_number }}</strong></td>
                                    </tr>
                                    <tr>
                                        <td>Vevő</td>
                                        <td>
                                            {% if order.name %}
                                                {{ order.name }}
                                                {% if order.email %}
                                                    <br><small class="text-muted">{{ order.email }}</small>
                                                {% endif %}
                                            {% else %}
                                                <span class="text-muted fst-italic">Ismeretlen / törölt felhasználó</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Státusz</td>
                                        <td>
                                            {% set status = order.status|lower %}
                                            {% if status == 'folyamatban' %}
                                                <span class="badge text-bg-secondary">Függőben</span>
                                            {% elseif status == 'fizetve' %}
                                                <span class="badge text-bg-success">Fizetve</span>
                                            {% elseif status == 'szallitva' %}
                                                <span class="badge text-bg-primary">Kiszállítva</span>
                                            {% elseif status == 'teljesitve' %}
                                                <span class="badge text-bg-success">Lezárva</span>
                                            {% elseif status == 'torolve' %}
                                                <span class="badge text-bg-danger">Törölve</span>
                                            {% else %}
                                                <span class="badge text-bg-light text-body">Ismeretlen</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Létrehozva</td>
                                        <td>
                                            {{ order.created_at|date('Y-m-d H:i') }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Összeg (bruttó)</td>
                                        <td>
                                            {{ order.total_gross|number_format(0, ',', ' ') }} Ft
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <h4 class="mt-5 mb-2">Rendelés részletek</h4>
                            <p>A felhasználó a következő termékeket tette a kosárba:</p>
                            <table class="table table-striped table-hover align-middle">
                                <tbody>
                                {% for item in order_items %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-start gap-3">
                                                {% if item.book.image_url %}
                                                    <img src="{{ item.book.image_url }}"
                                                         alt="{{ item.book.title }}"
                                                         style="width:60px; height:auto; object-fit:cover;">
                                                {% endif %}
                                                <div>
                                                    <div class="fw-semibold">{{ item.book.title }}</div>
                                                    <div class="text-muted small">{{ item.book.author }}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>{{ item.order_item.qty }}</td>
                                        <td>{{ item.order_item.unit_price|number_format(0, ',', ' ') }} Ft</td>
                                        <td>{{ item.order_item.line_total|number_format(0, ',', ' ') }} Ft</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}


                </div>
            </div>
        </div>
    </div>
{% endblock %}
